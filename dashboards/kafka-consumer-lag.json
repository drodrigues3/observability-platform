{
  "annotations": { "list": [] },
  "description": "Kafka Consumer Lag: Per topic and consumer group lag monitoring",
  "editable": true,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "expr": "sum(kafka_consumer_group_lag) by (consumergroup, topic)",
          "legendFormat": "{{consumergroup}} / {{topic}}",
          "refId": "A"
        }
      ],
      "title": "Consumer Group Lag by Topic",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 2,
      "targets": [
        {
          "expr": "sum(rate(kafka_server_brokertopicmetrics_messagesinpersec[5m])) by (topic)",
          "legendFormat": "{{topic}} produced/s",
          "refId": "A"
        }
      ],
      "title": "Messages Produced per Second",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2 },
          "unit": "short"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 3,
      "targets": [
        {
          "expr": "rate(kafka_consumer_group_lag[5m])",
          "legendFormat": "{{consumergroup}} lag rate",
          "refId": "A"
        }
      ],
      "title": "Consumer Lag Rate of Change",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "style": "dark",
  "tags": ["observability", "kafka"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Kafka Consumer Lag",
  "uid": "kafka-consumer-lag",
  "version": 1
}
